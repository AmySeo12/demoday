.col{
  #perfil{
    height: 120px;
  }
  .card{
    height: 168px;
    padding: 5px;
    .card-image{
      width: 95px;
      height: 95px;
      color: $grosc;
      
      img{
        width:100%;
        height: 100%;
        border-radius: 50%;
        margin: 5px;
      } 
    }
		.card-content{
			padding: 10px 16px 0px;
			max-heigth: 104px;
			padding: 10px 16px 5px;
		}
		.card-action{
			padding: 10px 20px;
		}
  }
}

.collapsible-body p{
  padding: 1rem;
}

.ratyli .rate{
  color: #ccc; 
  font-size: 47px;
  .rate-empty{
    color: #666;
  }
  .rate-active{
    color: #a94039;
  }
}
.ratyli.rated{
  .rate-full{
    color: #f9a91a;
  }
}


